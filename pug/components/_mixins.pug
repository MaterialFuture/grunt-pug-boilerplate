//- 19020 Section (Banner)
mixin section(id)
	section.story(id=id)
		block


mixin section-fw(id, s1, s2)
	+section(id).child-cross-center.flex.m-t2.m-b2.p-t2.p-b2.p-l1.p-r1.stack
		h3.heading__up-to().z-text-align-center
			+upTo(s1, s2)(c1='t-ultra', s2="font-family:'mallory-condensed' !important;")
		if block
			block
		else
			p No content provided
