    a.grow.m-_5.t-cond.z-btn.z-btn-ghost-white(href=heroBtn3URL, data-ta-intcmp='1', data-ta-intcmp-loc=heroBtn3LOC, data-ta-intcmp-id=heroBtn3ID) xxxx
    a.grow.m-_5.t-cond.z-btn.z-btn-ghost-white(href=heroBtn4URL, data-ta-intcmp='1', data-ta-intcmp-loc=heroBtn4LOC, data-ta-intcmp-id=heroBtn4ID) xxxx
    a.grow.m-_5.t-cond.z-btn.z-btn-ghost-white(href=heroBtn5URL, data-ta-intcmp='1', data-ta-intcmp-loc=heroBtn5LOC, data-ta-intcmp-id=heroBtn5ID) xxxx


mixin btn-white(name)
  a.grow.m-_5.t-cond.z-btn.z-btn-ghost-white&attributes(attributes)= name
mixin btn-red(name)
  .grow.m-_5.t-cond.z-btn.bg-red.t-white&attributes(attributes)= name
mixin btn-blue(name)
  .grow.m-_5.t-cond.z-btn.bg-blue.t-white&attributes(attributes)= name

