mixin hero(id, textcolor, line1, line2, sub1)
  section(id=id).story.child-cross-center.flex.p-t2.p-b2.stack.bg-blue.p-l_5.p-r_5
    h2(class=textcolor).heading__hero.z-text-align-center
      span.t-cond(style='font-size: 2.5em') line1
      span.t-cond(style='font-size: 2.5em') line2
      span.t-ultra(style='font-size: 4em;') sub1
    if block
      block
    else
      p No content provided


mixin button-row-5
  .btn-container.flex.m-t1.p-_5.stack.unstack-768.mxw-1024(style='width:100%')
    //- Btns
